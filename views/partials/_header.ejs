<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (username && username !== 'undefined') { %>
          <a class="nav-item nav-link">Logged in as: <%= username %></a>
          <form action="/logout" method="POST">
            <button type="submit" class="btn btn-danger">Logout</button>
          <% } else { %>  
            <a class="nav-item nav-link">You are not logged in</a>
            <form class="form-inline" action="/login" method="POST">
              <input
                type="text"
                name="username"
                placeholder="username"
                style="width: 150px; margin: 1em"
              />
              <button type="submit" class="btn btn-primary">Login</button>
         <% } %>
      </div>
    </div>
  </nav>
</header>